<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prepare="clr-namespace:Madome.ViewModels.Prepare"
             xmlns:customControl="clr-namespace:Madome.Custom.Control"
             x:DataType="prepare:SetHostViewModel"
             BackgroundColor="{DynamicResource backgroundColor}"
             x:Class="Madome.Views.Prepare.SetHostPage"
             Title="서버 설정">
    <ContentPage.BindingContext>
        <prepare:SetHostViewModel />
    </ContentPage.BindingContext>
    <FlexLayout
        Direction="Column"
        AlignItems="Stretch"
        JustifyContent="SpaceEvenly" >
        <StackLayout >
            <customControl:HideLineEntry
                Text="{Binding Url, Mode=OneWayToSource}" HorizontalTextAlignment="Center"
                Keyboard="Url" HasBorder="False" IsTabStop="False"
                FontSize="Large" IsSpellCheckEnabled="False" 
                IsTextPredictionEnabled="False" BackgroundColor="{DynamicResource backgroundColor}"
                FlexLayout.AlignSelf="Start" Placeholder="Madome 호환 서버 주소를 입력해주세요."/>
            <Button Text="확인" FontSize="Default" FlexLayout.AlignSelf="Start"
                    Clicked="button_click" TextColor="{DynamicResource TextPrimaryColor}"/>
        </StackLayout>
    </FlexLayout>
</ContentPage>
