<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madome.Views.Library.BookReader"
             xmlns:library="clr-namespace:Madome.ViewModels.Library"
             xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.Core"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             BackgroundColor="Black"
             x:DataType="library:BookReaderViewModel">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Path=Images, Mode=OneWay}" VerticalOptions="FillAndExpand"
                  CachingStrategy="RecycleElement" HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10" BackgroundColor="Black">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ffimageloading:CachedImage Grid.Row="0" x:DataType="x:String"
                                MinimumHeightRequest="250" MinimumWidthRequest="250" 
                                HorizontalOptions="Fill" Source="{Binding .}" 
                                VerticalOptions="Fill" DownsampleToViewSize="true" CacheType="None"
                                Aspect="AspectFill" >
                            </ffimageloading:CachedImage>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>