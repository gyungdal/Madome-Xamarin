<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Madome.Views.Library.BookReader"
             xmlns:library="clr-namespace:Madome.ViewModels.Library"
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView"
             xmlns:proc="clr-namespace:PanCardView.Processors;assembly=PanCardView"
             xmlns:controls="clr-namespace:PanCardView.Controls;assembly=PanCardView"
             xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.Core"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             BackgroundColor="Black"
             x:DataType="library:BookReaderViewModel">
    
    <cards:CarouselView 
        ItemsSource="{Binding Path=Images}"
        SelectedIndex="{Binding CurrentIndex}">
        <x:Arguments>
            <proc:CarouselProcessor ScaleFactor="0.5" OpacityFactor="0" RotationFactor="0.1" />
        </x:Arguments>

        <cards:CarouselView.ItemTemplate>
            <DataTemplate>
                <ContentView>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ffimageloading:CachedImage Grid.Row="0" x:DataType="x:String"
                            MinimumHeightRequest="250" MinimumWidthRequest="250"
                            HorizontalOptions="Fill" Source="{Binding .}" 
                            VerticalOptions="Fill" DownsampleToViewSize="true" CacheType="Memory"
                            Aspect="AspectFill" >
                        </ffimageloading:CachedImage>
                    </Grid>
                </ContentView>
            </DataTemplate>
        </cards:CarouselView.ItemTemplate>
        
        <controls:IndicatorsControl ToFadeDuration="1500"/>
        <controls:LeftArrowControl ToFadeDuration="2500"/>
        <controls:RightArrowControl ToFadeDuration="2500"/>
    </cards:CarouselView>
</ContentPage>