<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:library="clr-namespace:Madome.ViewModels.Library"
             xmlns:struct="clr-namespace:Madome.Struct" xmlns:control="clr-namespace:Madome.Custom.Control"
             BackgroundColor="{StaticResource tertiarySystemBackground}"
             x:Class="Madome.Views.Library.BookList"
             x:DataType="library:BookListViewModel"
             Title="Home">

    <ListView x:Name="BookListView"
            HasUnevenRows="True"
            ItemsSource="{Binding Books, Mode=OneWay}"
            CachingStrategy="RecycleElementAndDataTemplate"
            BackgroundColor="{StaticResource tertiarySystemBackground}"
		    IsPullToRefreshEnabled="True"
            RefreshCommand="{Binding RefreshCommand}"
            IsRefreshing="{Binding IsRefreshing}">
          
        <ListView.ItemTemplate> 
            <DataTemplate>
                <ViewCell>
                    <Grid HeightRequest="175" x:DataType="struct:Book">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ffimageloading:CachedImage Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                            HorizontalOptions="Center" Source="{Binding Path=Thumb}"
                            VerticalOptions="Center" DownsampleToViewSize="true" CacheType="All"
                            FadeAnimationForCachedImages="True" CacheDuration="15"
                            Aspect="AspectFill" HeightRequest="150" WidthRequest="150">
                        </ffimageloading:CachedImage>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Path=Title, Mode=OneTime}"
                               LineBreakMode="TailTruncation" TextColor="{StaticResource label}"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Path=Type, Mode=OneTime}"
                               Font="Small" TextColor="{StaticResource label}"
                               LineBreakMode="TailTruncation"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
