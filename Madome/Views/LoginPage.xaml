<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Madome.Views.LoginPage">
    <Grid HorizontalOptions="Fill" Margin="5" VerticalOptions="CenterAndExpand"
          BackgroundColor="#E0E0E0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Editor Grid.Row="1" Margin="2" TextColor="#000"/>
        <Editor Grid.Row="3" Margin="2" TextColor="#000"/>
        <Button Grid.Row="5" Margin="2" TextColor="#000" Text="Test"/>
    </Grid>
</ContentPage>
